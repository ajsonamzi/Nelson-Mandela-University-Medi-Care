@model IEnumerable<MediCare2._0.Models.Drug>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MediCare2._0.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrapmedic.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <link href="css/bootstrap.min.css" rel="stylesheet">

    <link href="css/bootstrap-icons.css" rel="stylesheet">

    <link href="css/owl.carousel.min.css" rel="stylesheet">

    <link href="css/owl.theme.default.min.css" rel="stylesheet">

    <link href="css/templatemo-medic-care.css" rel="stylesheet">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&family=Poppins:wght@600;700&display=swap"
          rel="stylesheet" />

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
          rel="stylesheet" />

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet" />
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/insbootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet" />
</head>

<h1>Drugs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Drug Name
            </th>
            <th>
                @*Html.DisplayNameFor(model => model.description)*@
            </th>
            <th>
                @*Html.DisplayNameFor(model => model.dosage)*@
            </th>
            <th>
                @*Html.DisplayNameFor(model => model.dateFirstManufactured)*@
            </th>
            <th>
                Administration
            </th>
            <th>
                @*Html.DisplayNameFor(model => model.SideEffects)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Symptoms.symptomName)
            </th>
            <th>
                @*Html.DisplayNameFor(model => model.Companies)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phases.phaseStage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alternatives.alternativeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contraindications.contraindicationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedules.scheduleNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.drugName)
            </td>
            <td>
                @*Html.DisplayFor(modelItem => item.description)*@
            </td>
            <td>
                    @*Html.DisplayFor(modelItem => item.dosage)*@
            </td>
            <td>
                @*Html.DisplayFor(modelItem => item.dateFirstManufactured)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrugAdmins.adminType)
            </td>
            <td>
                    @*Html.DisplayFor(modelItem => item.SideEffects.sideEffectName)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Symptoms.symptomName)
            </td>
            <td>
                    @*Html.DisplayFor(modelItem => item.Companies.companyName)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phases.phaseStage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alternatives.alternativeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contraindications.contraindicationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Schedules.scheduleNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.drugID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.drugID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.drugID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
